/* pages/todoList/todoList.wxss */
page {
  background: #fbf8ff;
}

.fab {
  width: 100px;
  height: 50px;
  margin: 20px 20px 20px auto;
  border: 1px solid rgba(0, 0, 0, 0.05);
  border-radius: 14px;
  text-align: center;
  line-height: 50px;
  box-shadow: 0 10px 15px -5px rgba(0, 0, 0, 0.15);
  transition: all ease 0.4s;
  background: #ffd7f2;
  position: fixed;
  bottom: 0;
  margin-bottom: calc(env(safe-area-inset-bottom) + 96rpx + 35px);
  right: 10px;
}

.todo-ops {
  display: flex;
  opacity: 0;
  visibility: hidden;
  line-height: 40px;
  text-align: center;
  position: absolute;
  top: 50%;
  margin-top: -25px;
  right: 10px;
  transition: all 1s ease-out 1s;
  background: #d6d7e4cc;
  border-radius: 30px;
  padding: 5px 10px 5px 0;
  box-shadow: 0 10px 15px -5px rgba(0, 0, 0, 0.15);
}

.todo-op {
  width: 40px;
  height: 40px;
  margin-left: 10px;
  border-radius: 50px;
  transition: all 0.1s cubic-bezier(0, 0, 0.2, 1);
}

.done-btn {
  background: #505b92;
  color: white;
}

.modify-btn,
.remove-btn {
  background: #f2eff9;
  color: black;
}

.todo-ops.animC {
  opacity: 1;
  transition: all cubic-bezier(0, 0, 0.2, 1) 0.1s
}

.todo-ops.selected {
  opacity: 1;
  visibility: visible;
}

.animD {
  scale: 80%;
  transition: all 0.1s cubic-bezier(0, 0, 0.2, 1);
}

.done-btn {
  width: 40px;
  height: 40px;
}

.animA {
  background: #d4b5ca;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.2);
  transition: all cubic-bezier(0, 0, 0.2, 1) 0.2s
}

.todo {
  margin: 10px;
  padding: 8px 12px;
  border-radius: 12px;
  transition: all ease 0.5s;
  min-height: 40px;
  position: relative;
  background: #fefdff;
  border: #c6c5d0 1px solid;
}

.animB {
  background: #d1cadf;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
  transition: all cubic-bezier(0, 0, 0.2, 1) 0.2s;
  border: #7c7b83 1px solid;
}


.tabbar {
  height: 130rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) - 24rpx);
  background: #fefbff;
}

.weui-half-screen-dialog__bd,
.weui-half-screen-dialog__ft {
  padding: 20px 0;
}
