/* pages/todoList/todoList.wxss */
page{
  background:#fbf8ff;
}
.fab {
  width: 100px;
  height: 50px;
  margin: 20px 20px 20px auto;
  border: 1px solid rgba(0, 0, 0, 0.05);
  border-radius: 14px;
  text-align: center;
  line-height: 50px;
  box-shadow: 0 10px 15px -5px rgba(0, 0, 0, 0.15);
  transition: all ease 0.4s;
  background: #ffd7f2;
  position: fixed;
  bottom: 0;
  margin-bottom: calc(env(safe-area-inset-bottom) + 96rpx + 35px);
  right: 10px;
}

.todo-ops {
  display: flex;
  opacity: 0;
  visibility: hidden;
  line-height: 40px;
  text-align: center;
  position: absolute;
  top: 50%;
  margin-top: -25px;
  right: 10px;
  transition: all 2s ease-out 4s;
  background: #dfe1f9cc;
  border-radius: 30px;
padding:5px 10px 5px 0;
box-shadow: 0 10px 15px -5px rgba(0, 0, 0, 0.15);
}

.todo-op {
  width: 40px;
  height: 40px;
  margin-left: 10px;
  border-radius: 50px;
  transition: all 0.1s cubic-bezier(0,0,0.2,1);
}

.done-btn{
  background: #505b92;
  color:white;
}

.modify-btn,.remove-btn{
  background: #f2eff9;
  color:black;
}

.todo-ops.animC {
  opacity: 1;
  transition: all cubic-bezier(0, 0, 0.2, 1) 0.1s
}

.todo-ops.selected {
  opacity: 1;
  visibility: visible;
}

.animD {
  scale: 80%;
  transition: all 0.1s cubic-bezier(0,0,0.2,1);
}

.done-btn {
  width: 40px;
  height: 40px;
}

.animA {
  background: #d4b5ca;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.2);
  transition: all cubic-bezier(0, 0, 0.2, 1) 0.2s
}

.todo {
  margin: 10px;
  padding: 8px 12px;
  border-radius: 10px;
  transition: all ease 0.5s;
  min-height: 40px;
  position: relative;
}

.animB {
  background: rgba(128, 128, 128, 0.25);
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
  transition: all cubic-bezier(0, 0, 0.2, 1) 0.2s
}

.tabbar {
  height: 130rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) - 24rpx);
  background: #fefbff;
}

.weui-tabbar__item.weui-bar__item_on .weui-tabbar__label {
  color: #1b1b1f;
  font-weight: 700;
  transition: all cubic-bezier(0, 0, 0.2, 1) 0.2s
}

.weui-tabbar__label {
  color: #47464a;
  font-weight: 500;
  transition: all ease 0.4s;
}

.weui-tabbar__icon {
  border-radius: 50px;
  margin: 0 0 4px 0;
  padding: 8px 0 0 0;
  height: 2.4em;
  width: 2.4em;
  transition: all cubic-bezier(0, 0, 0.2, 1) 0.2s
}

.weui-tabbar__item.weui-bar__item_on .weui-tabbar__icon {
  background: #dfe1f9;
  transition: all ease 0.4s;
  padding: 4px 22px;
}