.generateView>view {
  opacity: 0;
  scale: 90%;
  display: none;
  transition: all cubic-bezier(0, 0, 0.2, 1) 0.2s;
  height: 150px;
}

.wx_loading_view {
  padding-top: 150px;

}

.inputView textarea {
  height: 300px;
}

.animEa {
  display: block !important;
}

.animEb {
  scale: 100% !important;
  opacity: 1 !important;
  transition: all ease-out 0.2s;
}

.weui-half-screen-dialog__ft{
visibility: hidden;
opacity: 0;
scale: 90%;
transition: all cubic-bezier(0, 0, 0.2, 1) 0.2s;
}
.animEc .weui-half-screen-dialog__ft{
  visibility:visible;
  opacity: 1;
  scale: 100%;
  transition: all ease-out 0.2s;
  }

.weui-tabbar__item.weui-bar__item_on .weui-tabbar__label {
  color: #1b1b1f;
  font-weight: 700;
  transition: all cubic-bezier(0, 0, 0.2, 1) 0.2s
}

.weui-tabbar__label {
  color: #47464a;
  font-weight: 500;
  transition: all ease 0.4s;
}

.weui-tabbar__icon {
  border-radius: 50px;
  margin: 0 0 4px 0;
  padding: 8px 0 0 0;
  height: 2.4em;
  width: 2.4em;
  transition: all cubic-bezier(0, 0, 0.2, 1) 0.2s
}

.weui-tabbar__item.weui-bar__item_on .weui-tabbar__icon {
  background: #dfe1f9;
  transition: all ease 0.4s;
  padding: 4px 22px;
}